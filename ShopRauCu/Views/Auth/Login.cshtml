@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5 mb-5 hero-header">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h3>Đăng nhập</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorAuth"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorAuth"]</div>
                    }
                    @if (TempData["SuccessAuth"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessAuth"]</div>
                    }

                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small>Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
