@model ShopRauCu.Models.Feedback

@{
    ViewData["Title"] = "Liên hệ";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Liên hệ</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Trang</a></li>
        <li class="breadcrumb-item active text-white">Liên hệ</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Contact Start -->
<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">

                <!-- Tiêu đề -->
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">Liên hệ với chúng tôi</h1>
                    </div>
                </div>

                <!-- Thông báo -->
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["success"]
                    </div>
                }

                <!-- Google Map -->
                <div class="col-lg-12">
                    <div class="h-100 rounded">
                        <iframe class="rounded w-100"
                                style="height: 400px;"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4483.9586264680065!2d105.69316507579914!3d18.659058464928155!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3139cddf0bf20f23%3A0x86154b56a284fa6d!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBWaW5o!5e1!3m2!1svi!2s!4v1764692642253!5m2!1svi!2s"
                                loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>

                <!-- Form phản hồi -->
                <div class="col-lg-7">

                    <form action="@Url.Action("Submit", "Page")" method="post">
                        @Html.AntiForgeryToken()

                        <input asp-for="Name"
                        required
                               class="w-100 form-control border py-3 mb-4"
                               placeholder="Tên của bạn" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>

                        <input asp-for="Email"
                            type="email"
                               required
                               class="w-100 form-control border py-3 mb-4"
                               placeholder="Nhập email của bạn" />
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>

                        <textarea asp-for="Message"
                                  required
                                  class="w-100 form-control border mb-4"
                                  rows="5"
                                  placeholder="Nội dung tin nhắn"></textarea>
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Message)</span>

                        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary"
                                type="submit">
                            Gửi phản hồi
                        </button>
                    </form>

                </div>

                <!-- Thông tin liên hệ -->
                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Địa chỉ</h4>
                            <p class="mb-2">Đại học Vinh, Lê Duẩn, Thành phố Vinh , Nghệ An</p>
                        </div>
                    </div>

                    <div class="d-flex p-4 rounded mb-4 bg-white">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Email</h4>
                            <p class="mb-2">lethuhuyen160105@gmail.com</p>
                        </div>
                    </div>

                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4>Số điện thoại</h4>
                            <p class="mb-2">+84 374 818 760</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
